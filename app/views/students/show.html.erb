<p style="color: green"><%= notice %></p>

<div class="sectionstudent_layout">
  <div class="sectionstudent_details">
    <%= render @student %>
  </div>

  <div class="registered_sectionstudents">
    <%#= link_to "Add student to this section", %>
    <h4>Registered Sections</h4>

      <ul>
        <% @student.sections.each do |section| %>
          <li><%= section.section_info%></li>
        <%end%>
      </ul>
      
  </div>
</div>

<div>
  <div class="submit"><%= button_to "Destroy this student", @student, method: :delete %></div>

  <div class="edit_nav_button">
    <%= link_to "Edit this student", edit_student_path(@student) %> |
    <%= link_to "Back to students", students_path %>
  </div>
</div>
